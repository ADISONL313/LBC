<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cqcskj.lbc.mapper.ActivityMapper">
    <select id="activityGetMapper">
        select * from activity
        <where>
            <if test="activityName!='' and activityName!=null">
                and activity_name like CONCAT("%",#{activityName},"%")
            </if>
            <if test="activityStartTime!='' and activityStartTime!=null">
                and activity_start_time like CONCAT("%",#{activityStartTime},"%")
            </if>
            <if test="activityEndTime!='' and activityEndTime!=null">
                and activity_end_time like CONCAT("%",#{activityEndTime},"%")
            </if>
        </where>
        order by activity_end_time desc
    </select>
</mapper>